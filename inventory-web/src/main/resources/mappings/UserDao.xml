<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inventory.dao.UserDao">
    <resultMap id="BaseResultMap" type="com.inventory.entity.User">
        <id column="id" property="id"/>
        <result column="login_name" property="loginName"/>
        <result column="password" property="password"/>
        <result column="name" property="name"/>
        <result column="create_date" property="createDate"/>
        <result column="delete_state" property="deleteState"/>
    </resultMap>

    <select id="selectListNoPage" parameterType="com.inventory.entity.User" resultMap="BaseResultMap">
        SELECT id,login_name,password,name,create_date
        FROM psi_user WHERE delete_state='0'
    </select>

    <select id="findUsersById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT id,username,password
        FROM psi_user WHERE id=#{id}
    </select>


</mapper>