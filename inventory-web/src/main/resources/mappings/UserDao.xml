<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inventory.dao.UserDao">
    <resultMap id="BaseResultMap" type="com.inventory.pojo.User">
        <id column="id"  property="id"/>
        <result column="login_name"  property="loginName"/>
        <result column="password"  property="password"/>
        <result column="real_name"  property="realName"/>
        <result column="create_date"  property="createDate"/>
        <result column="delete_state"  property="deleteState"/>
        <result column="is_job"  property="isJob" />
    </resultMap>
    <sql id="Base_Column_List">
        id, login_name, password, real_name, is_job, create_date, delete_state
    </sql>

    <select id="findUserByLoginName" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from user
        WHERE
        login_name=#{loginName} and delete_state = '0'
    </select>


</mapper>