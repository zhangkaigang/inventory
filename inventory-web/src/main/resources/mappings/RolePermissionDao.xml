<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inventory.dao.RolePermissionDao">
    <resultMap id="BaseResultMap" type="com.inventory.po.RolePermission">
        <result column="role_id"  property="roleId"/>
        <result column="permission_id"  property="permissionId"/>
    </resultMap>
    <sql id="Base_Column_List">
        role_id, permission_id
    </sql>

    <insert id="addRolePermission" parameterType="com.inventory.po.RolePermission" >
        insert into role_permission(
          role_id,
          permission_id
        ) values (
          #{roleId, jdbcType=INTEGER},
          #{permissionId, jdbcType=INTEGER}
        )
    </insert>

    <select id="queryPermissionsByRoleId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT
        <include refid="Base_Column_List" />
        from role_permission
        where role_id = #{roleId,jdbcType=INTEGER}
    </select>

    <delete id="deleteRolePermission" parameterType="java.lang.Integer" >
        delete from role_permission
        where role_id = #{roleId,jdbcType=INTEGER}
  </delete>

</mapper>