<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inventory.dao.RoleDao">
    <resultMap id="BaseResultMap" type="com.inventory.po.Role">
        <id column="id"  property="id"/>
        <result column="role_name"  property="roleName"/>
        <result column="role_code"  property="roleCode"/>
        <result column="description"  property="description"/>

        <result column="create_op"  property="createOp"/>
        <result column="create_date"  property="createDate" jdbcType="TIMESTAMP"/>
        <result column="modify_op"  property="modifyOp"/>
        <result column="modify_date"  property="modifyDate" jdbcType="TIMESTAMP"/>
        <result column="delete_state"  property="deleteState"/>
        <result column="delete_date"  property="deleteDate" jdbcType="TIMESTAMP"/>

    </resultMap>
    <sql id="Base_Column_List">
        id, role_name, role_code, description,
        create_op, create_date, modify_op, modify_date, delete_state, delete_date
    </sql>

    <select id="queryRoleList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from role
        where delete_state='0'
    </select>

    <insert id="addRole" useGeneratedKeys="true" keyProperty="id" parameterType="com.inventory.po.Role" >
        insert into role(
          id,
          role_name,
          role_code,
          description,
          create_op,
          create_date
        ) values (
          #{id, jdbcType=INTEGER},
          #{roleName, jdbcType=VARCHAR},
          #{roleCode, jdbcType=VARCHAR},
          #{description, jdbcType=VARCHAR},
          #{createOp, jdbcType=INTEGER},
          CURRENT_TIMESTAMP
        )
    </insert>
    
    <update id="editRole" parameterType="com.inventory.po.Role">
        update role
        <set >
            <if test="roleName != null" >
                role_name = #{roleName,jdbcType=VARCHAR},
            </if>
            <if test="roleCode != null" >
                role_code = #{roleCode,jdbcType=VARCHAR},
            </if>
            <if test="description != null" >
                description = #{description,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <update id="deleteRole"  parameterType="java.lang.Integer">
        update role set
            delete_state = '1',
            delete_date = CURRENT_TIMESTAMP
        where id = #{id, jdbcType=INTEGER}
    </update>
</mapper>